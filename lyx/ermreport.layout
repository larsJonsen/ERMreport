Input stdlists.inc
Input stdcounters.inc
Input stdfloats.inc
Input stdsections.inc
Input stdstarsections.inc
Input numreport.inc
Input stdtitle.inc
Input stdstruct.inc
#Input lyxmacros.inc
Input stdlayouts.inc


NoStyle Part
NoStyle Part*  

Style Preface
	Margin                Static
	Category              FrontMatter
	LabelString           "Preface"
	#LabelType             Counter
	#LabelCounter          chapter
	#TocLevel              0
	LatexType             Command
	LatexName             chapter
	NeedProtect           1
	NextNoIndent          1
	ParSkip               0.4
	TopSep                4
	BottomSep             0.8
	ParSep                0.8
	Align                 Block
	Argument 1
		LabelString   "Short Title (TOC)|S"
		Tooltip       "The chapter as it appears in the table of contents"
	EndArgument
	Argument 2
		LabelString   "Short Title (Header)"
		Tooltip       "The chapter as it appears in the running headers"
		Requires      1
	EndArgument
	Font
	  Series              Bold
	  Size                Huge
	EndFont
	HTMLTag               h1
End      	

